<%= link_to "Log out", destroy_user_session_path %>
<% unless current_user.group != nil && current_user.group.churches.count > 0 %>
  <%= link_to new_church_path, class: "btna" do %>
  <div class="button" style="margin-top:20%;display:none;"><p>ADD CHURCH</p></div>
  <% end %>
  <script>
    $(document).ready(function(){
      $('.button').fadeIn();
    });
  </script>
<% else %>
  <% current_user.group.churches.each do |church| %>
    <h3 class="display-4"><%= church.name %></h3>
    <p class="lead">Church Code: <%= current_user.group.group_code %></p>
    <hr width="30%" style="margin-bottom:2em;">
    <%= link_to church_path(church), class: "btna" do %>
      <div class="button" style=""><p>ATTENDANCE</p></div>
    <% end %>
    <%= link_to new_member_path, class: "btna" do %>
      <div class="button" style=""><p>ADD MEMBER</p></div>
    <% end %>
    <%= link_to church_stats_path(church), class: "btna" do %>
      <div class="button" style=""><p>ANALYTICS</p></div>
    <% end %>
  <% end %>
<% end %>
<style>
.btna:hover {
  text-decoration: none;
  cursor: default;
}
  .button {
    width: 240px;
    height: 80px;
    border: 4px solid #fe4365;
    color: #fe4365;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0;
    cursor: pointer;
    left: 50%;
    position: relative;
    margin-left: -120px;
    transition: .3s ease-in-out;
    margin-bottom: 2em;
  }
  .button > p {
    font-family: 'Lato',sans-serif;
    font-size: 25px;
    letter-spacing: 2px;
    font-weight: 700;
    margin: 0;
  }
  .button:hover {
    background-color: #fe4365;
    color: white;
  }
  .display-4 {
    font-family: 'Lato';
    font-size: 50px;
    text-align: center;
    margin-top: 30px;
  }
  .lead {
    text-align: center;
    font-family: 'Lato',sans-serif;
    font-weight: 400;
    letter-spacing: 1px;
  }
</style>
